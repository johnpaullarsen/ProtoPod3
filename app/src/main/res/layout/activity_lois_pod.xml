<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".LoisPodActivity"
    android:gravity="bottom">

    <!-- The primary full-screen view. This can be replaced with whatever view
     is needed to present your content, e.g. VideoView, SurfaceView,
     TextureView, etc. -->
<!--    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="@string/dummy_content"/>-->

    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:keepScreenOn="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:weightSum="1"
        android:gravity="bottom"
        android:layout_marginTop="300dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/currentSong"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.26"
            android:layout_above="@+id/fullscreen_content"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
        android:layout_width="match_parent" android:layout_height="300dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/black_overlay" android:orientation="vertical"
        tools:ignore="UselessParent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Play"
            android:id="@+id/playButton"
            android:background="@android:color/holo_green_light"
            android:layout_above="@+id/stopButton"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:text="Stop"
            android:id="@+id/stopButton"
            android:background="@android:color/holo_red_light"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:layout_above="@+id/fullscreen_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>


    <!-- This FrameLayout insets its children based on system windows using
     android:fitsSystemWindows. -->

</RelativeLayout>
